{
  "name": "bamul-backend",
  "version": "1.0.0",
  "description": "Bamul Analytics Backend API",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "dev": "npx tsx src/server.ts",
    "dev:watch": "nodemon",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:push": "drizzle-kit push:mysql",
    "db:studio": "drizzle-kit studio",
    "db:generate": "drizzle-kit generate:mysql",
    "db:migrate": "npx tsx src/db/migrate.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "db:seed": "npx tsx src/db/seed.ts"
  },
  "keywords": [
    "express",
    "typescript",
    "drizzle",
    "mysql",
    "analytics"
  ],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.1",
    "express": "^4.18.2",
    "mysql2": "^3.6.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "drizzle-kit": "^0.20.7",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
